{
  "manifest_version": 3,
  "name": "AmoTube (AMOLED YouTube)",
  "version": "2.0.0",
  "author": "lucmsilva651@gmail.com",
  "description": "Chrome extension that makes YouTube AMOLED.",
  "permissions": ["scripting"],
  "update_url": "https://raw.githubusercontent.com/lucmsilva651/amotube/main/updates.xml",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png",
    "500": "assets/icon500.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/extension.js"]
    }
  ]
}
